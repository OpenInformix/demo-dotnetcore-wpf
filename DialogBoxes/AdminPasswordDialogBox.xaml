<Window x:Class="ISL.DialogBoxes.AdminPasswordDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISL.DialogBoxes"
        mc:Ignorable="d"
        Title="AdminPasswordDialogBox" Height="180" Width="500">
    <StackPanel>
        <TextBlock Name="textBlockHeading" Text="Enter The Admin Password" Height="30" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="475" />
        <PasswordBox x:Name="ResponseTextBox" Height="30" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="465" />
        <Button Content="OK" Height="30" HorizontalAlignment="Right" Margin="0,20,100,0" Name="OK" VerticalAlignment="Top" Width="70" Click="OKButton_Click" />
        <Button Content="Cancel" Height="30" HorizontalAlignment="Right" Margin="100,-30,10,0" Name="Cancel" VerticalAlignment="Top" Width="70" Click="CancelButton_Click" />
    </StackPanel>
</Window>
